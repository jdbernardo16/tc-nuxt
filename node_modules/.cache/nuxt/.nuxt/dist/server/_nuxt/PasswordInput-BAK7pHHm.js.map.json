{"file":"PasswordInput-BAK7pHHm.js","mappings":";;;;;;;;;;;;;;;AACM,UAAA,eAAe,IAAI,KAAK;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;","names":[],"sources":["../../../../../../../woonuxt_base/app/components/forms/PasswordInput.vue"],"sourcesContent":["<script setup lang=\"ts\">\nconst showPassword = ref(false)\n\nconst { modelValue, className, placeholder, required } = defineProps({\n    modelValue: { type: String, required: true },\n    className: { type: String, default: '' },\n    placeholder: { type: String, default: '' },\n    autocomplete: { type: String, default: 'new-password' },\n    required: { type: Boolean, default: false },\n})\n\nconst emit = defineEmits(['update:modelValue'])\n\nconst handleInputChanged = (e: Event) => {\n    const target = e.target as HTMLInputElement\n    emit('update:modelValue', target.value)\n}\n</script>\n\n<template>\n    <div class=\"relative flex items-center w-full\">\n        <input\n            :type=\"showPassword ? 'text' : 'password'\"\n            class=\"flex items-center flex-1\"\n            :value=\"modelValue\"\n            @input=\"handleInputChanged\"\n            :class=\"className\"\n            :placeholder=\"placeholder\"\n            :autocomplete=\"autocomplete\"\n            :required=\"required\"\n        />\n        <Icon\n            name=\"ion:eye-outline\"\n            size=\"20\"\n            class=\"absolute cursor-pointer right-4\"\n            @click=\"showPassword = !showPassword\"\n            v-if=\"showPassword\"\n        />\n        <Icon\n            name=\"ion:eye-off-outline\"\n            size=\"20\"\n            class=\"absolute cursor-pointer right-4\"\n            @click=\"showPassword = !showPassword\"\n            v-else\n        />\n    </div>\n</template>\n"],"version":3}